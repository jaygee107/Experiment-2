#include <iostream>
#include <cmath>

using namespace std;

int main ()

{
    double V, X, Y, Z;
    
    V = 0;
    Z = 2.5;
    
    cout << "Please enter a value for X: " << endl;
    cin >> X;
    
    cout << "Please enter a value for Y : " << endl;
    cin >> Y;
    
    if ( X == 1 && Y < 5 )
    {
        V = X * Y * Z;
        cout << "V = " << V << endl;
    }
    
    else if ( X == 1 && Y >= 5 )
    {
        V = (X + Y) / Z;
        cout << "V = " << V << endl;
    }
    
    else if ( X == 2 && Y <= 5 )
    {
        V = (X - Y) / Z ;
        cout << "V = " << V << endl;
    }
    
    else if ( X == 2 && Y > 5 )
    {
        V = X - ( sqrt (Y + Z));
        cout << " V = " << V << endl;
    }
    
    else
    {
        V = X + Y + Z;
        cout << "V = " << V << endl;
    }
    
    return 0;
}

