#include <iostream>

using namespace std;

int main ()

{
    int num, sum;
    sum = 0;
    
    cout << "Enter a number: ";
    cin >> num;
    
    if (num > 0)
    {
        while (num > 0)
        {
            for (int i = 1; i <= num; i++)
            sum += i;
        
            cout << "The sum of all numbers from 1 to " << num << " is: " << sum << endl;
            
            cout << "Enter another number ";
            cin >> num;
            
            sum = 0;
        }
    
    while (num <= 0)
        {
            cout << "Thank you!" << endl;
            break;
        }
    
    }
    return 0;
}


