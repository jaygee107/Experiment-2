#include <iostream>

using namespace std;

int main()
{
    int R, C;
    
    cout << "Please enter the desired number of rows: ";
    cin >> R;
    
    cout << "Please enter the desired number of columns: ";
    cin >> C;
    
    cout << "Now printing: A box with " << R << " rows and " << C << " columns." << endl;
    
    
    for (int a = 0; a < R; a++)
    {
        for (int b = 0; b < C; b++)
        {
            cout << "*";
        }
            cout << "\n";
    }

    return 0;
}


